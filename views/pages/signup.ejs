<%- include("../partials/head.ejs") -%>
<section
  class="container bg-success bg-opacity-25 border border-dark border-2 rounded-4 mt-5 p-3"
>
  <h1>Cree su usuario</h1>
  <form action="" method="post">
    <h2>Datos de cuenta</h2>
    <label for="username">Registre su usuario</label><br />
    <input
      type="text"
      id="username"
      name="username"
      class="form-control"
    /><br />
    <label for="email">Ingrese su email</label><br />
    <input type="email" id="email" name="email" class="form-control" /><br />
    <label for="password">Contraseña</label><br />
    <input
      type="text"
      id="password"
      name="password"
      class="form-control"
    /><br />

    <h2>Datos personales</h2>
    <label for="name">Nombre</label>
    <input type="text" name="name" id="name" />

    <label for="lastName">Apellido</label>
    <input type="text" name="lastName" id="lastName" />

    <label for="lastName">Télefono</label>
    <input type="tel" name="phone" id="phone" />

    <h2>Dirección</h2>

    <label for="lastName">País</label>
    <input type="text" name="country" id="country" />

    <label for="lastName">Provincia</label>
    <input type="text" name="estate" id="estate" />

    <label for="lastName">Ciudad</label>
    <input type="text" name="city" id="city" />

    <label for="lastName">Dirección</label>
    <input type="text" name="address" id="address" /><br />

    <input
      type="submit"
      value="Registrar Usuario"
      class="btn btn-outline-primary"
    />
  </form>
  <br />
  <h2 class="position-relative">¿Ya tenés cuenta?</h2>
  <a href="/api/user/login" style="text-decoration: none"
    ><button class="btn btn-outline-info">Ingresar</button></a
  >
</section>
<%- include("../partials/footer.ejs") -%>
